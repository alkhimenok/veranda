.burger
  position relative
  z-index 3
  $flex(center, space-between, column)
  width $sizeXL
  height $sizeLG
  background-color transparent
  transition $delay
  cursor pointer
  &__line,&::before,&::after
    content ''
    width 100%
    height 15%
    display block
    background-color $primaryColor
    transition $delay
    user-select none
  @media screen and (hover hover)
    &:hover
      .burger__line,&::before,&::after
        background-color $transparentPrimaryColor
  &:active
    .burger__line,&::before,&::after
      background-color $transparentThirdColor
._show-menu
  .burger
    transform rotate(45deg)
    span
      opacity 0
    &::before,&::after
      background-color $errorColor
    &::before
      transform rotate(90deg) translate(30%, 0)
    &::after
      transform translate(0, -270%)
