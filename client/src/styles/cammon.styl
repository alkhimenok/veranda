._screen
  min-height 100vh

  $flex(center, space-between, column)

  & > *
    width 100%

._container
  max-width $maxWidth
  margin 0 auto

._body
  padding 0 $sizeSM

._logo
  font-family $thirdFont
  font-size $sizeXXL
  text-transform capitalize
  user-select none
  cursor pointer

._title
  font-family $secondaryFont
  font-size $sizeXL
  letter-spacing $sizeXS

  @media screen and (max-width $breackpointSMMax)
    text-align center

._subtitle
  font-size $sizeLG

._list
  $flex(center, space-between, row, wrap)

  @media screen and (max-width $breackpointXLMax)
    justify-content center

._text
  font-size $sizeMD

._btn
  padding $sizeXS $sizeLG
  font-family $secondaryFont
  font-size $sizeLG
  text-transform capitalize
  border-radius $borderRadiusOval
  border $thinBorder $primaryColor
  transition $delay
  cursor pointer

  &:hover
    color $secondaryColor
    background-color $thirdColor
    border-color $thirdColor

._img
  width 100%
  height 100%
  object-fit cover
  object-position center
