.home
  @media screen and (min-width breackpointMDMin)
    position relative
  @media screen and (max-width breackpointSMMax)
    dflex(center, center, column-reverse)
.home__background 
  width 100%
  height 100%
  object-fit contain
  object-position center

.home__container
  @media screen and (min-width breackpointMDMin)
    position: absolute
    top 50%
    transform translate(0, -50%)
  @media screen and (max-width breackpointSMMax)
    padding sizeXL
    text-align: center
  @media screen and (min-width breackpointXSMax) 
    left calc((100vw - 1400px) / 2)
  @media screen and (max-width breackpointXLMax)
    left 0
